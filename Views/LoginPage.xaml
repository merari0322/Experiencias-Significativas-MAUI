<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Experiencias_Significativas_App.MAUI.Views.LoginPage"
             BackgroundColor="Transparent">

    <!-- Fondo degradado -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0D0D2B" Offset="0.70" />
            <GradientStop Color="#1A1A4E" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="*,Auto,*" Padding="20">

        <!-- Botones superiores -->
        <HorizontalStackLayout Grid.Row="0"
                               HorizontalOptions="Center"
                               VerticalOptions="Start"
                               Spacing="20">

            <Button Text="Ayuda"
                    BackgroundColor="#6B7280"
                    TextColor="White"
                    CornerRadius="10"
                    WidthRequest="120" />

            <Button Text="Regístrate"
                    BackgroundColor="#0070F0"
                    TextColor="White"
                    CornerRadius="10"
                    WidthRequest="120" />
        </HorizontalStackLayout>

        <!-- Imagen inferior (cohete) -->
        <Image 
            Grid.Row="2"
            Source="cohete.png"
            HeightRequest="300"
            HorizontalOptions="Center"
            VerticalOptions="End"
            Aspect="AspectFit"
            Margin="0,0,0,-80" />

        <!-- Tarjeta de login centrada -->
        <Border Grid.Row="1"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 25"
                Padding="40"
                BackgroundColor="#1A1A4E"
                Stroke="#FFF"
                MaximumWidthRequest="400"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Margin="0,-100,0,0"
                Shadow="{Shadow Brush=#FFF, Offset='0,0', Radius=30, Opacity=0.4}">

            <VerticalStackLayout Spacing="20">

                <!-- Título -->
                <Label Text="Iniciar Sesión"
                       FontSize="36"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#FF9933"
                       Margin="0,0,0,10" />

                <!-- Campo usuario -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Usuario"
                           FontSize="14"
                           TextColor="#FFF"
                           Margin="5,0,0,0" />
                    <Border StrokeThickness="0"
                            BackgroundColor="#CCFFFFFF"
                            StrokeShape="RoundRectangle 10"
                            HeightRequest="50">
                        <Entry x:Name="UsernameEntry"
                               Placeholder="Ingresa tu correo"
                               BackgroundColor="Transparent"
                               TextColor="#1A1A1A"
                               PlaceholderColor="#888888"
                               VerticalTextAlignment="Center"
                               FontSize="16"
                               Margin="15,0" />
                    </Border>
                </VerticalStackLayout>

                <!-- Campo contraseña -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Contraseña"
                           FontSize="14"
                           TextColor="#FFF"
                           Margin="5,0,0,0" />
                    <Border StrokeThickness="0"
                            BackgroundColor="#CCFFFFFF"
                            StrokeShape="RoundRectangle 10"
                            HeightRequest="50">
                        <Entry x:Name="PasswordEntry"
                               Placeholder="Ingresa tu contraseña"
                               IsPassword="True"
                               BackgroundColor="Transparent"
                               TextColor="#1A1A1A"
                               PlaceholderColor="#888888"
                               VerticalTextAlignment="Center"
                               FontSize="16"
                               Margin="15,0" />
                    </Border>
                </VerticalStackLayout>

                <!-- Botón ingresar -->
                <Button Text="Ingresar"
                        BackgroundColor="#FF9933"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="20"
                        CornerRadius="10"
                        HeightRequest="50"
                        Margin="0,10,0,0"
                        Shadow="{Shadow Brush=#009CFF, Offset='0,2', Radius=8, Opacity=0.4}"
                        Clicked="OnLoginClicked" />

                <!-- Indicador de carga -->
                <ActivityIndicator x:Name="LoadingIndicator"
                                   IsRunning="False"
                                   IsVisible="False"
                                   Color="#009CFF"
                                   WidthRequest="50"
                                   HeightRequest="50"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   Margin="0,20,0,0" />

                <!-- Enlaces inferiores -->
                <VerticalStackLayout Spacing="8"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Center"
                                     Margin="0,10,0,0">
                    <Label Text="¿Se te olvidó tu contraseña?"
                           FontSize="14"
                           TextColor="#FF9933"
                           TextDecorations="Underline"
                           HorizontalOptions="Center" />

                    <Label Text="Crea tu cuenta"
                           FontSize="14"
                           TextColor="#FF9933"
                           TextDecorations="Underline"
                           HorizontalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnRegisterLinkTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
