<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Experiencias_Significativas_App.MAUI.Views.LoginPage"
             BackgroundColor="Transparent">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
            <GradientStop Color="#FFFFFFFF" Offset="0.2" />
            <GradientStop Color="#009CFF" Offset="0.8" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="*,Auto,*"
          Padding="20">

        <!-- Tarjeta de login centrada -->
        <Border Grid.Row="1"
                StrokeThickness="0"
                BackgroundColor="#80FFFFFF"
                StrokeShape="RoundRectangle 20"
                Padding="40"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                MaximumWidthRequest="450">

            <VerticalStackLayout Spacing="20">

                <!-- Título -->
                <Label Text="Iniciar Sesión"
                       FontSize="28"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#1A1A1A"
                       Margin="0,0,0,10" />

                <!-- Campo usuario -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Usuario"
                           FontSize="14"
                           TextColor="#333333"
                           Margin="5,0,0,0" />
                    <Border StrokeThickness="0"
                            BackgroundColor="#CCFFFFFF"
                            StrokeShape="RoundRectangle 10"
                            HeightRequest="50">
                        <Entry x:Name="UsernameEntry"
                               Placeholder="Ingresa tu usuario"
                               BackgroundColor="Transparent"
                               TextColor="#1A1A1A"
                               PlaceholderColor="#888888"
                               VerticalTextAlignment="Center"
                               FontSize="16"
                               Margin="15,0" />
                    </Border>
                </VerticalStackLayout>

                <!-- Campo contraseña -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Contraseña"
                           FontSize="14"
                           TextColor="#333333"
                           Margin="5,0,0,0" />
                    <Border StrokeThickness="0"
                            BackgroundColor="#CCFFFFFF"
                            StrokeShape="RoundRectangle 10"
                            HeightRequest="50">
                        <Entry x:Name="PasswordEntry"
                               Placeholder="Ingresa tu contraseña"
                               IsPassword="True"
                               BackgroundColor="Transparent"
                               TextColor="#1A1A1A"
                               PlaceholderColor="#888888"
                               VerticalTextAlignment="Center"
                               FontSize="16"
                               Margin="15,0" />
                    </Border>
                </VerticalStackLayout>

                <!-- Botón ingresar -->
                <Button Text="Ingresar"
                        BackgroundColor="#009CFF"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="16"
                        CornerRadius="10"
                        HeightRequest="50"
                        Margin="0,10,0,0"
                        Shadow="{Shadow Brush=#009CFF, Offset='0,2', Radius=8, Opacity=0.4}"
                        Clicked="OnLoginClicked" />

                <!-- 🔹 ActivityIndicator (círculo de carga) -->
                <ActivityIndicator x:Name="LoadingIndicator"
                            IsRunning="False"
                            IsVisible="False"
                            Color="#009CFF"
                            WidthRequest="50"
                            HeightRequest="50"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Margin="0,20,0,0" />

            </VerticalStackLayout>

        </Border>

        <!-- Enlaces de ayuda -->
        <VerticalStackLayout Grid.Row="2"
                            Spacing="10"
                            HorizontalOptions="Center"
                            VerticalOptions="Start"
                            Margin="0,30,0,0">
            <Label Text="¿Se te olvidó tu contraseña?"
                   FontSize="14"
                   TextColor="White"
                   TextDecorations="Underline"
                   HorizontalOptions="Center">
                <!--<Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCreateAccountTapped" />
                </Label.GestureRecognizers>-->
            </Label>

            <Label Text="Crea tu cuenta"
                   FontSize="14"
                   TextColor="White"
                   TextDecorations="Underline"
                   HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnRegisterLinkTapped" />
                </Label.GestureRecognizers>
            </Label>

        </VerticalStackLayout>

    </Grid>

</ContentPage>