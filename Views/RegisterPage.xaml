<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Experiencias_Significativas_App.MAUI.Views.RegisterPage"
             BackgroundColor="Transparent">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0D0D2B" Offset="0.70" />
            <GradientStop Color="#1A1A4E" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <Grid RowDefinitions="*,Auto,*"
              Padding="20">

            <Border Grid.Row="1"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 25"
                Padding="40"
                BackgroundColor="#1A1A4E"
                Stroke="#FFF"
                MaximumWidthRequest="400"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Margin="0,-80,0,0"
                Shadow="{Shadow Brush=#FFF, Offset='0,0', Radius=30, Opacity=0.4}">

                <VerticalStackLayout Spacing="18"
                                     WidthRequest="310">

                    <Label Text="Registro"
                           FontSize="28"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="#FF9933"
                           Margin="0,0,0,10" />

                    <Grid ColumnDefinitions="*,12,*">
                        
                        <VerticalStackLayout Grid.Column="0" Spacing="8">
                            <Label Text="Primer Nombre:" 
                                   FontSize="14" 
                                   TextColor="#FF9933" 
                                   Margin="5,0,0,0" />
                            <Border StrokeThickness="0" 
                                    BackgroundColor="#CCFFFFFF" 
                                    StrokeShape="RoundRectangle 10" 
                                    HeightRequest="45">
                                <Entry x:Name="FirstNameEntry" 
                                       BackgroundColor="Transparent" 
                                       TextColor="#1A1A1A" 
                                       FontSize="16" 
                                       Margin="10,0"/>
                            </Border>
                        </VerticalStackLayout>

                        
                        <VerticalStackLayout Grid.Column="2" Spacing="8">
                            <Label Text="Segundo Nombre:" 
                                   FontSize="14" 
                                   TextColor="#FF9933" 
                                   Margin="5,0,0,0" />
                            <Border StrokeThickness="0" 
                                    BackgroundColor="#CCFFFFFF" 
                                    StrokeShape="RoundRectangle 10" 
                                    HeightRequest="45">
                                <Entry x:Name="MiddleNameEntry" 
                                       BackgroundColor="Transparent" 
                                       TextColor="#1A1A1A" 
                                       FontSize="16" 
                                       Margin="15,0"
                                       />
                            </Border>
                        </VerticalStackLayout>
                    </Grid>

                    
                    <Grid ColumnDefinitions="*,12,*">
                        
                        <VerticalStackLayout Grid.Column="0" Spacing="8">
                            <Label Text="Primer Apellido:" 
                                   FontSize="14" 
                                   TextColor="#FF9933" 
                                   Margin="5,0,0,0" />
                            <Border StrokeThickness="0" 
                                    BackgroundColor="#CCFFFFFF" 
                                    StrokeShape="RoundRectangle 10" 
                                    HeightRequest="45">
                                <Entry x:Name="FirstLastNameEntry" 
                                       BackgroundColor="Transparent" 
                                       TextColor="#1A1A1A" 
                                       FontSize="16" 
                                       Margin="15,0" />
                            </Border>
                        </VerticalStackLayout>

                        
                        <VerticalStackLayout Grid.Column="2" Spacing="8">
                            <Label Text="Segundo Apellido:" 
                                   FontSize="14" 
                                   TextColor="#FF9933" 
                                   Margin="5,0,0,0" />
                            <Border StrokeThickness="0" 
                                    BackgroundColor="#CCFFFFFF" 
                                    StrokeShape="RoundRectangle 10" 
                                    HeightRequest="45">
                                <Entry x:Name="SecondLastNameEntry" 
                                       BackgroundColor="Transparent" 
                                       TextColor="#1A1A1A" 
                                       FontSize="16" 
                                       Margin="15,0" />
                            </Border>
                        </VerticalStackLayout>
                    </Grid>

                    
                    <Grid ColumnDefinitions="*,12,*">
                        
                        <VerticalStackLayout Grid.Column="0" Spacing="8">
                            <Label Text="Tipo de documento:" 
                                   FontSize="14" 
                                   TextColor="#FF9933" 
                                   Margin="5,15,0,0" />
                            <Border StrokeThickness="0" 
                                    BackgroundColor="#CCFFFFFF" 
                                    StrokeShape="RoundRectangle 10" 
                                    HeightRequest="48">
                                <Picker x:Name="DocumentTypePicker" 
                                        Title="Seleccionar" 
                                        BackgroundColor="Transparent" 
                                        TextColor="#1A1A1A" 
                                        FontSize="16" 
                                        Margin="10,0" />
                            </Border>
                        </VerticalStackLayout>

                        
                        <VerticalStackLayout Grid.Column="2" Spacing="8">
                            <Label Text="Número de documento:" 
                                   FontSize="14" 
                                   TextColor="#FF9933" 
                                   Margin="5,0,0,0" />
                            <Border StrokeThickness="0" 
                                    BackgroundColor="#CCFFFFFF" 
                                    StrokeShape="RoundRectangle 10" 
                                    HeightRequest="45">
                                <Entry x:Name="IdentificationNumberEntry" 
                                       Keyboard="Numeric" 
                                       BackgroundColor="Transparent" 
                                       TextColor="#1A1A1A" 
                                       FontSize="16" Margin="15,0" />
                            </Border>
                        </VerticalStackLayout>
                    </Grid>

                    
                    <Grid ColumnDefinitions="*,12,*">
                        
                        <VerticalStackLayout Grid.Column="0" Spacing="8">
                            <Label Text="Código DANE:" FontSize="14" TextColor="#FF9933" Margin="5,0,0,0" />
                            <Border StrokeThickness="0" BackgroundColor="#CCFFFFFF" StrokeShape="RoundRectangle 10" HeightRequest="45">
                                <Picker x:Name="CodeDanePicker" Title="Seleccionar" BackgroundColor="Transparent" TextColor="#1A1A1A" FontSize="16" Margin="10,0" />
                            </Border>
                        </VerticalStackLayout>

                        
                        <VerticalStackLayout Grid.Column="2" Spacing="8">
                            <Label Text="Nombre de usuario:" FontSize="14" TextColor="#FF9933" Margin="5,0,0,0" />
                            <Border StrokeThickness="0" BackgroundColor="#CCFFFFFF" StrokeShape="RoundRectangle 10" HeightRequest="45">
                                <Entry x:Name="UsernameEntry" BackgroundColor="Transparent" TextColor="#1A1A1A" FontSize="16" Margin="15,0" />
                            </Border>
                        </VerticalStackLayout>
                    </Grid>

                    <Grid ColumnDefinitions="*,12,*">
                        
                        <VerticalStackLayout Grid.Column="0" Spacing="8">
                            <Label Text="Correo Institucional" FontSize="14" TextColor="#FF9933" Margin="5,0,0,0" />
                            <Border StrokeThickness="0" BackgroundColor="#CCFFFFFF" StrokeShape="RoundRectangle 10" HeightRequest="45">
                                <Entry x:Name="EmailInstitutionalEntry" BackgroundColor="Transparent" TextColor="#1A1A1A" FontSize="16" Margin="10,0" />
                            </Border>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="2" Spacing="8">
                            <Label Text="Contraseña" FontSize="14" TextColor="#FF9933" Margin="5,0,0,0" />
                            <Border StrokeThickness="0" BackgroundColor="#CCFFFFFF" StrokeShape="RoundRectangle 10" HeightRequest="45">
                                <Entry x:Name="PasswordEntry" IsPassword="True" BackgroundColor="Transparent" TextColor="#1A1A1A" FontSize="16" Margin="15,0" />
                            </Border>
                        </VerticalStackLayout>
                    </Grid>

                    <Button Text="Registrarse"
                            x:Name="RegisterButton"
                            BackgroundColor="#FF9933"
                            TextColor="White"
                            FontAttributes="Bold"
                            FontSize="16"
                            CornerRadius="10"
                            HeightRequest="50"
                            Margin="0,10,0,0"
                            Clicked="OnRegisterClicked"
                            Shadow="{Shadow Brush=#009CFF, Offset='0,2', Radius=8, Opacity=0.4}" />

                </VerticalStackLayout>

            </Border>

            <VerticalStackLayout Grid.Row="2"
                                 Spacing="10"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Start"
                                 Margin="0,-10,0,0">
                <Label Text="¿Quieres iniciar sesión?"
                       FontSize="14"
                       TextColor="#FF9933"
                       TextDecorations="Underline"
                       HorizontalOptions="Center"
                       Margin="0,30,0,0">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLoginLinkTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </VerticalStackLayout>

        </Grid>
    </ScrollView>
</ContentPage>
