<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Experiencias_Significativas_App.MAUI"
             x:Class="Experiencias_Significativas_App.MAUI.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />    
            </ResourceDictionary.MergedDictionaries>
            <Color x:Key="PrimaryColor">#233D91</Color>
            <Color x:Key="AccentColor">#F4C542</Color>
            <Color x:Key="BackgroundColor">#F2F4F8</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
